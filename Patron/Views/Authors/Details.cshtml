@model Patron.Models.Author

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="dl-horizontal">
        <img src="~/Avatars/@ViewBag.Avt" alt="" height="50px" width="50px"/>
        <dt>
            Nazwa użytkownika:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            Kategorie:
        </dt>

        <dd>
            @foreach (var cat in @ViewBag.Categories)
            {
                @(cat.Name)
            }
        </dd>

        <dt>
            Imię:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Nazwisko:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            Miasto:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            Rachunek bankowy:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BankAccount)
        </dd>

        <dt>
            Opis:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>


        <dt>
            Facebook
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FacebookLink)
        </dd>

        <dt>
            Instagram
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InstagramLink)
        </dd>
        <dt>
            Twitter
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TwitterLink)
        </dd>
        <dt>
            YouTube
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YouTubeLink)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OtherLink)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OtherLink)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Usuń", "Delete", new { id = Model.ID }, new { @class = "btn btn-danger" }) |
    @Html.ActionLink("Powrót do listy", "Index", null, new { @class = "btn btn-default" })
</p>

@model Patron.Models.Payment

@{
    ViewBag.Title = "Nowa płatność";
}

<h2>Udziel jednorazowego wsparcia</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Nowa płatność</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <p>Autor:  @ViewBag.Author.FirstName @ViewBag.Author.LastName</p>
    <div class="form-group">
        <p>Wpisz kwotę(PLN)</p>
        <div class="col-md-10">
            <p>@Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control" } })</p>
            @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
        </div>
    </div>
    <span style="visibility:hidden">
        @Html.EditorFor(model => model.AuthorID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        @Html.EditorFor(model => model.PatronID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

    </span>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Wpłać" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

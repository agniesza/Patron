@model Patron.Models.Post

@{
    ViewBag.Title = "Edycja postu";
}

<h2>Edytuj post</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.AuthorID)
    @Html.HiddenFor(model => model.NumberOfRatings)
    @Html.HiddenFor(model => model.Raiting)
    @Html.HiddenFor(model => model.Date)
    <div class="form-group">
        <p>Tytuł</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Treść</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zapisz zmiany" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Twoje posty", "ShowAuthorPosts",
                    "Posts", new { id = Model.AuthorID }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
